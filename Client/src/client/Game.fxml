<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<GridPane id="GridPane2"   hgap="0" vgap="3" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.GameController">
    <padding><Insets top="10"  bottom="10" left="10" right="10"/></padding>
    
        <GridPane id="board"  hgap="10" vgap="10" alignment="CENTER"  GridPane.columnIndex="0" GridPane.rowIndex="0" prefHeight="600" prefWidth="450">
             <padding><Insets top="10"  bottom="10" left="10" right="10" /></padding>
                <ImageView GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="3" fitHeight="400" fitWidth="400">
                     
                     <image>
                        <Image url="@board.jpg" />
                     </image>
                  </ImageView>
                <Label  text="Player 1 :" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label  text="Player 2 :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <Label  text=" XXXX" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label  text=" XXXX" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label  text="00:00" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <Label  text="It's your turn " GridPane.columnIndex="1" GridPane.rowIndex="3" />
               
                 <HBox spacing="10" alignment="CENTER"  GridPane.columnIndex="2" GridPane.rowIndex="3" >
                 <Button text="Send"  />    
                </HBox>     
           
               
        </GridPane>
        
         <GridPane id="chat"  hgap="5" vgap="10"  alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0"   prefHeight="600" prefWidth="328">
              <padding><Insets top="10"  bottom="10" left="10" right="10" /></padding>
             <Label fx:id="label" text="Chat:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextArea fx:id="textArea"  GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2" prefHeight="500" prefWidth="300" />
               
                <TextField GridPane.columnIndex="0" GridPane.rowIndex="3" prefWidth="240"/>
                 <HBox spacing="1" alignment="bottom_right" 
                GridPane.columnIndex="1" GridPane.rowIndex="3">
                <Button text="Send"  />
                 </HBox>
                 
        </GridPane>
    <stylesheets>
        <URL value="@Game.css"/>
    </stylesheets>
</GridPane >
